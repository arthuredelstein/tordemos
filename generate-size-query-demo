#!/usr/bin/env python

maxSize = 2000

print("""
<!DOCTYPE html>
<html>
 <head>
  <style>
    div.dimension {
      display: inline-block;
      width: 100px;
      height: 60px;
    }
""")

for i in range(maxSize):
  print(
"""
    @media (width: {0}px) {{
      #w {{
        background-image: url("http://dummyimage.com/100x60/000/fff&text={0}&dim=x");
      }}
    }}

    @media (height: {0}px) {{
      #h {{
        background-image: url("http://dummyimage.com/100x60/000/fff&text={0}&dim=y");
      }}
    }}
""".format(i))

print("""
  </style>
 </head>
 <body>
""")

print("""
  <div id="w" class="dimension"></div>
  <img src="http://dummyimage.com/60x60/fff/000&text=x"></img>
  <div id="h" class="dimension"></div>

 </body>
</html>
""")
